    <div class="divce">
        <label>Cimer ili cimerka</label>
        <input type="text" value="<%= oglas.cimerOrCimerka %>" readonly class="podesiInputNajbolji">
    </div> 
    
    <div class="divce">
        <label>Tip objekta</label>
        <input type="text" value="<%= oglas.tipObjekta %>" readonly class="podesiInputNajbolji">
