    <div class="divce">
        <label>Nacin grejanja</label>
        <input type="text" value="<%= oglas.nacinGrejanja %>" readonly class="podesiInputNajbolji">
    </div>

    <div class="divce">
        <label><span class="narandzasta">*</span>Useljiv od: </label>
        <input type="date" name="useljivOd" 
            value="<%= oglas.useljivOd == null ? '' : 
            oglas.useljivOd.toISOString().split("T")[0] %>" readonly class="podesiInputNajbolji">
    </div>

    <div class="divce">
        <label><span class="narandzasta">*</span>Cena <span class="narandzasta">po cimeru</span></label>
        <input type="text" name="cena" min="10" value="<%= oglas.cena %>" readonly class="podesiInputNajbolji">
    </div>
</div>

