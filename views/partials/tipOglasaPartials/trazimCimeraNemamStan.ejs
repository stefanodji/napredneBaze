<h2 class="podNaslov">Opste karakteristike</h2>
<div class="rasporediUnutra">
    <div class="divce">
        <label>Cimer ili cimerka</label>
        <select name="cimerIliCimerka" class="podesiInputNajbolji">
            <option>Svejedno</option>
            <option>Musko</option>
            <option>Zensko</option>
        </select>
    </div> 

    <div class="divce">
        <label>Tip objekta</label>
        <select name="tipObjekta" class="podesiInputNajbolji">
            <option>Stan</option>
            <option>Kuca</option>
        </select>
    </div>

    <div class="divce">
        <label>Nacin grejanja</label>
        <select name="nacinGrejanja" class="podesiInputNajbolji">
            <option>Centralno</option>
            <option>Gas</option>
            <option>Elektricno</option>
            <option>Etazno</option>
        </select>
    </div>

    <div class="divce">
        <label><span class="narandzasta">*</span>Kad se mozes useliti: </label>
        <input type="date" name="useljivOd" class="podesiInputNajbolji"
                value="<%= oglas.useljivOd == null ? '' : 
                oglas.useljivOd.toISOString().split("T")[0] %>">
    </div>

    <div class="divce">
        <label><span class="narandzasta">*</span>Cena koju biste placali</span></label>
        <input type="text" name="cena" min="10" value="<%= oglas.cena %>" class="podesiInputNajbolji">
    </div>
</div>





